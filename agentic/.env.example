# Agentic FOSS Authentication & Secrets Management
# Copy this file to .env and fill in your values

# GitHub OAuth Application (create at https://github.com/settings/applications/new)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URL=http://localhost:8080/auth/callback

# Secrets Management
AGENTIC_SECRETS_FILE=.agentic/secrets.json
AGENTIC_SECRETS_PASSWORD=your_secure_password_here

# API Keys (optional - can be stored in encrypted file instead)
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key
IO_INTELLIGENCE_API_KEY=your_io_intelligence_api_key

# Infrastructure Credentials
PROXMOX_URL=https://your-proxmox-server:8006
PROXMOX_USERNAME=your_proxmox_user@pam
PROXMOX_PASSWORD=your_proxmox_password
PROXMOX_TOKEN=your_proxmox_api_token
PROXMOX_NODE=your_default_proxmox_node

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_CERT_PATH=/path/to/docker/certs
DOCKER_TLS_VERIFY=1

# Kubernetes Configuration
KUBECONFIG=/path/to/kubeconfig
KUBE_CONTEXT=your_kubernetes_context
KUBE_NAMESPACE=default

# Cloud Provider Keys (for future steps)
CLOUDFLARE_API_KEY=your_cloudflare_api_key
CLOUDFLARE_EMAIL=your_cloudflare_email

# Server Configuration
AGENTIC_HOST=localhost
AGENTIC_PORT=8080
